<div class="container mt-5">
    <h4>Daftar Pengguna</h4>

        <!-- Button Add User -->
        <a href="/user/add" class="btn btn-primary mb-2">Tambah Data Pengguna</a>

        <!-- Catching Flash -->
        <% if (msg.length !== 0) { %>

            <!-- Getting Message -->
            <div class="alert alert-success" role="alert">
                <%= msg %> 
            </div>
        <% } %>

        <table class="table table-stripped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Nomor HP</th>
                <th scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody>
                <!-- Condition if empty -->
                <% if (users.length === 0) { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger fw-bold" role="alert">
                                Data Kontak Masih Kosong
                            </div>
                        </td>
                    </tr>
                <% } %>
                <% let no = 1; %> 
                <!-- Looping -->
                <% users.forEach((user, index) => { index++ %>  
                    <tr>
                        <th scope="row"><%= index++ %></th>
                        <td><%= user.username %></td>
                        <td><%= user.phone %></td>
                        <td>
                            <!-- Update -->
                            <a href="/user/edit/<%= user._id %>" class="btn btn-success badge rounded-pill">Update</a>
                            
                            <!-- Delete -->
                            <form action="/user?_method=DELETE" method="POST" class="d-inline">
                                <input type="hidden" name="_id" value="<%= user._id %>">
                                <button type="submit" class="btn btn-danger badge rounded-pill" onclick="return confirm('Apakah Anda yakin?')">Hapus</button>
                            </form>
                            <!-- <a href="/user/<%= user._id %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a> -->
                        </td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>
</div>